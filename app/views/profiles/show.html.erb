<div class='container-fluid text-center'>
  <h1> <%= @user.first_name %>'s Profile </h1>
</div>

<ul class='container text-center panel-group col-xs-8 col-xs-offset-2'>
  <% @user.pictures.each do |picture| %>
  <div class='panel panel-default'>
    <li>
      <div class='panel-heading'>
      <h3 class='panel-title'>  <%= picture.title %> </h3>
      </div>
      <div class="panel-body">
        <a href="<% picture.image.url %>">
        <%= image_tag picture.image.url(:medium) %>
        </a>
      </div>
      <div class="panel-footer clearfix">
        <%= picture.description %>
        <div class='pull-mid'><br>
          <button type="button" name="Like" class='btn btn-primary btn-xs'>Like</button>
          <button type="button" name="Comment" class='btn btn-secondary btn-xs'>Comment</button>
        </div>
      </div>
    </li>
  </div>
  <% end %>
</ul>

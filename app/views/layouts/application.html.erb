<!DOCTYPE html>
<html>
  <head>
    <title>f-stop</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/2c6a2047cd.js"></script>
  </head>

  <body>
        <nav class='navbar d-flex justify-content-around'>

            <% if user_signed_in? %>
                <div class="ml-4">
                  <%= link_to('', new_picture_path, class:'fa fa-camera-retro fa-2x text-white', title: 'add a picture') %>
                </div>
                <div class="">
                  <%= link_to('','/', class:'fa fa-user fa-2x text-white', title: 'profile') %>
                </div>
                <div class="">
                  <%= button_to('Logout', destroy_user_session_path, method: :delete, class:'btn btn-primary btn-sm') %>
                </div>
            <% else %>
                <% unless controller_name == "sessions" || controller_name == "registrations" %>
                  <%= button_to('Login', new_user_session_path, method: :get, class:'btn btn-primary btn-sm')  %>
                <% end %>
            <% end %>
        </nav>

    <div class='container'>
        <%= yield %>
    </div>
    <p class="notice ml-5"><%= notice %></p>
    <p class="alert ml-5"><%= alert %></p>
  </body>
</html>
